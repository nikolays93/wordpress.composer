{
    "name": "nikolays93/composer-wp-example",
    "description": "Getting start with WordPress and Composer",
    "license": "MIT",
    "repositories": [
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": ">=4.2",
        "wpackagist-plugin/wordpress-seo":">=7.0.2"
    },
    "extra": {
        "wordpress-install-dir": "web.lc",
        "installer-paths": {
            "web.lc/wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "web.lc/wp-content/themes/{$name}": ["type:wordpress-theme"],
            "web.lc/wp-content/mu-plugins/{$name}": ["type:wordpress-muplugin"]
        }
    }
}